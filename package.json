{
    "name": "aoijs",
    "displayName": "aoijs",
    "description": "A extension for Aoi.js",
    "version": "0.0.1",
    "publisher": "akaruidevelopment",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "aoijs.helloWorld",
                "title": "Hello World",
                "category": "Aoi.js",
                "shortTitle": "Hello World"
            },
            {
                "command": "aoijs.transpileCode",
                "title": "Transpile Code",
                "category": "Aoi.js",
                "shortTitle": "Transpile Code"
            }
        ],
        "languages": [
            {
                "id": "aoi",
                "aliases": [
                    "Aoi.js",
                    "aoi"
                ],
                "extensions": [
                    ".aoi"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "dark": "./icons/my-icon.svg",
                    "light": "./icons/my-icon.svg"
                }
            }
        ],
        "grammars": [
            {
                "language": "aoi",
                "scopeName": "source.aoi",
                "path": "./syntaxes/aoi.tmLanguage.json"
            }
        ],
        "themes": [
            {
                "label": "AoiJS",
                "uiTheme": "vs-dark",
                "path": "./themes/AoiJS-color-theme.json"
            }
        ],
        "colors": [
            {
                "id": "aoi.function.keyword",
                "description": "AoiJS Function Keyword",
                "defaults": {
                    "dark": "#8700ff",
                    "light": "#260047",
                    "highContrast": "#8700ff"
                }
            },
            {
                "id": "aoi.comment",
                "description": "AoiJS Comment",
                "defaults": {
                    "dark": "#363636",
                    "light": "#000000",
                    "highContrast": "#1b1b1b"
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "^20.3.1",
        "@types/prismjs": "^1.26.0",
        "@types/vscode": "^1.75.0",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "@vscode/test-electron": "^2.3.3",
        "eslint": "^8.11.0",
        "glob": "^7.2.0",
        "mocha": "^10.2.0",
        "ts-loader": "^9.2.8",
        "typescript": "^5.1.3",
        "webpack": "^5.88.0",
        "webpack-cli": "^4.10.0"
    },
    "dependencies": {
        "prismjs": "^1.29.0",
        "undici": "^5.22.1"
    }
}
